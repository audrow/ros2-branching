{
  "name": "ros2-branching",
  "version": "0.0.1",
  "description": "Prepare for a new ROS 2 branch",
  "source": "src/index.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "lint": "eslint src --ignore-path .gitignore --max-warnings 0",
    "prettier": "prettier --ignore-path .gitignore \"**/*.(js|jsx|json|yml|yaml|css|ts|tsx|md|mdx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "jest",
    "validate-sync": "npm-run-all lint check-format test",
    "validate": "npm-run-all --parallel lint check-format test"
  },
  "files": [
    "dist"
  ],
  "author": "Audrow Nash",
  "contributors": [
    "Audrow Nash <audrow@hey.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/audrow/node-js-template"
  },
  "keywords": [
    "nodejs",
    "template",
    "typescript"
  ],
  "homepage": "https://github.com/audrow/node-js-template",
  "bugs": {
    "mail": "audrow@hey.com",
    "url": "https://github.com/audrow/node-js-template/issues"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^27.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/proper-url-join": "^2.1.1",
    "@types/temp-fs": "^0.9.30",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "commander": "^9.3.0",
    "fs-extra": "^10.1.0",
    "js-yaml": "^4.1.0",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
